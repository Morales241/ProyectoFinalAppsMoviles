<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.UC.UserConfig"
    android:background="@color/grisMasClaro">

    <LinearLayout
        android:id="@+id/layoutTitulo"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@color/mostaza"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRegresarHome"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            app:icon="@drawable/leftarrow"
            app:iconTint="#324A6C" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="Configuración de la cuenta"
            android:textColor="@color/azulOscuro"
            android:textSize="20sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/user"
        android:scaleType="centerCrop"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"/>

    <GridLayout
        android:id="@+id/gridUserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4"
        android:padding="16dp"
        android:layout_marginTop="16dp">

        <TextView
            android:text="Nombre:"
            android:textSize="16sp"
            android:textColor="@color/azulOscuro" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beatriz Pinzón"
            android:textSize="16sp"
            android:textColor="@color/azulOscuro"
            android:enabled="false" />

        <TextView
            android:text="Usuario:"
            android:textSize="16sp"
            android:textColor="@color/azulOscuro" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="secretariaEcoModa"
            android:textSize="16sp"
            android:textColor="@color/azulOscuro"
            android:enabled="false" />

        <TextView
            android:text="Correo:"
            android:textSize="16sp"
            android:textColor="@color/azulOscuro" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="betty@gmail.com"
            android:textSize="16sp"
            android:textColor="@color/azulOscuro"
            android:enabled="false" />

        <TextView
            android:text="Contraseña:"
            android:textSize="16sp"
            android:textColor="@color/azulOscuro" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*******"
            android:textSize="16sp"
            android:textColor="@color/azulOscuro"
            android:enabled="false" />
    </GridLayout>

    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar datos"
        android:textColor="@color/white"
        android:backgroundTint="@color/azulOscuro"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"/>
</LinearLayout>
