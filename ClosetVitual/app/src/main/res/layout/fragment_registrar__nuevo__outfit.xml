<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registrar_Nuevo_Outfit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@color/azulFuerte"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registra tu outfit"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="95dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:alignmentMode="alignMargins"
            android:padding="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/btnprenda1"
                android:layout_width="100dp"
                android:layout_height="190dp"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:src="@drawable/overoll"
                android:contentDescription="Mono"
                android:background="?attr/selectableItemBackground"
                android:layout_column="0"
                android:layout_rowSpan="4"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/btnprenda2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:src="@drawable/gorra"
                android:contentDescription="Gorra"

                android:layout_marginLeft="15dp"
                android:background="?attr/selectableItemBackground"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/btnprenda3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:src="@drawable/ic_prenda1"
                android:contentDescription="Suéter"
                android:layout_marginLeft="20dp"
                android:background="?attr/selectableItemBackground"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/btnprenda4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:src="@drawable/ic_prenda2"
                android:contentDescription="Pantalón"
                android:background="?attr/selectableItemBackground"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_gravity="center"
                android:layout_marginLeft="22dp"/>

            <ImageButton
                android:id="@+id/btnprenda5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:src="@drawable/ic_prenda3"
                android:contentDescription="Zapatos"
                android:background="?attr/selectableItemBackground"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"/>

            <ImageButton
                android:id="@+id/btnprenda6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:src="@drawable/collar"
                android:contentDescription="Collar"
                android:background="?attr/selectableItemBackground"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"/>

            <ImageButton
                android:id="@+id/btnprenda7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:src="@drawable/chamarraicono"
                android:contentDescription="Chamarra"
                android:background="?attr/selectableItemBackground"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"/>
        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnElegirOutfit"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:text="Registrar outfit"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>