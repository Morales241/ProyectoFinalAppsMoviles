<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NewPrenda.fragment_newPrenda">

    <!-- Encabezado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@color/mostaza"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registra tu outfit"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Contenedor principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Grid con 3 columnas -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:alignmentMode="alignMargins"
            android:padding="8dp">

            <!-- Primera columna (1 prenda grande) -->
            <ImageButton
                android:id="@+id/btnprenda1"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:src="@drawable/overoll"
                android:contentDescription="Mono"
                android:background="?attr/selectableItemBackground"
                android:layout_column="0"
                android:layout_rowSpan="2"
                android:layout_gravity="center" />

            <!-- Segunda columna (4 prendas más pequeñas) -->
            <ImageButton
                android:id="@+id/btnprenda2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:src="@drawable/gorra"
                android:contentDescription="Gorra"
                android:background="?attr/selectableItemBackground"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/btnprenda3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:src="@drawable/ic_prenda1"
                android:contentDescription="Suéter"
                android:background="?attr/selectableItemBackground"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/btnprenda4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:src="@drawable/ic_prenda2"
                android:contentDescription="Pantalón"
                android:background="?attr/selectableItemBackground"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/btnprenda5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:src="@drawable/ic_prenda3"
                android:contentDescription="Zapatos"
                android:background="?attr/selectableItemBackground"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_gravity="center" />

            <!-- Tercera columna (2 prendas medianas) -->
            <ImageButton
                android:id="@+id/btnCollar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:src="@drawable/collar"
                android:contentDescription="Collar"
                android:background="?attr/selectableItemBackground"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/btnChamarra"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:src="@drawable/chamarraicono"
                android:contentDescription="Chamarra"
                android:background="?attr/selectableItemBackground"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_gravity="center" />

        </GridLayout>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnRegistrarUso"
                android:layout_width="0dp"
                android:layout_height="78dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@color/azulOscuro"
                android:text="REGISTRAR USO DE HOY"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnElegirOutfit"
                android:layout_width="0dp"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:background="@color/azulOscuro"
                android:text="ELEGIR OUTFIT"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
