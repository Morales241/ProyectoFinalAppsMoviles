<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:background="#F5F5F5"
    tools:context=".MainActivity">


    <!-- Barra de título mostaza -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/mostaza"
        android:orientation="horizontal"
        android:gravity="center">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registra_una_prenda"
            android:textColor="#FFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Contenedor de Outfit -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Outfit -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="100dp"
                android:layout_marginTop="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_prenda1"
                android:contentDescription="Outfit Base"/>

            <!-- Botones de agregar en cada parte del outfit -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_add_circle_outline_24"
                android:layout_marginTop="-240dp"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="230dp"
                android:layout_height="130dp"
                android:src="@drawable/ic_prenda2"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="50dp"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_add_circle_outline_24"
                android:layout_marginTop="-100dp"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_marginTop="00dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_prenda2"/>
        </LinearLayout>

        <!-- Miniaturas -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_prenda1"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_prenda1" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_prenda2"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_prenda2"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Botones de Acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="16dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar uso de hoy"
            android:backgroundTint="#203F74"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar Outfit"
            android:backgroundTint="#203F74"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>
